  <view class="slide-menu" style="right: {{slideRight}}px;width: {{slideWidth}}px;height:{{slideHeight}}px;" animation="{{slideAnimation}}">
    <scroll-view scroll-y="true" style="height:100%;width:100%">
      <view class="header">
      <!--
        <view class="toolbar">
          <block wx:key="id" wx:for="{{pagesList}}">
