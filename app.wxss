/*common list  for  index  list page */

.common-list .list-item {
  position: relative;
  border-bottom: 1px solid #eee;
  padding: 20rpx;
  min-height: 150rpx;
  overflow: hidden;
}



.common-list .list-item.has-img image.cover {
  position: absolute;
  left: 20rpx;
  top: 20rpx;
  width: 150rpx;
  height: 150rpx;
  
}

.common-list .list-item.has-img .content-title {
  
  margin-left: 200rpx;
  height:80rpx;
  margin-bottom:20rpx;
  
}

.common-list .list-item.has-img .content-title text {
  
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;  

  font-size: 32rpx;
  line-height: 1.2;
  font-weight: normal;
}

.common-list .list-item.has-img .content-date {
   margin-left: 200rpx;
}

.common-list .list-item.has-img .content-date image {
 

  width: 32rpx;
  height: 32rpx;
  margin-right:10rpx;
  vertical-align: middle;
}

.common-list .list-item .content-date text {
  
  color:#999;
  margin-right: 30rpx;
  font-size: 21rpx;
  line-height: 1.2;
  font-weight: normal;
}


/*common list end */




