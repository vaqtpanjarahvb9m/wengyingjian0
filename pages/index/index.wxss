.index-header {
  
  text-align: center;
  font-weight: normal;
  font-size: 30rpx;
  line-height: 40rpx;
  color: #757575;
  margin-top: 5rpx;
 
}


/*   index   swiper  */

swiper.index-swiper {
  position: relative;
  height: 450rpx;
}

swiper .swiper-mask {
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  width: 100%;
  
}

swiper image {
  display: block;
  width: 100%;
  height: 95%;
  
}

swiper .swiper-desc {
  box-sizing: border-box;
  position: absolute;
  bottom: 8%;
  left: 0;
  right: 0;
  width: 100%;
  padding: 20rpx 20rpx 20rpx 20rpx;
  background: rgba(0, 0, 0, 0.3);
  color: #fff;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  font-size: 36rpx;
  height: 100rpx
}


/*   index   swiper  end  */



